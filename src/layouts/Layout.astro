---
export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Melbourne Food Blog",
  description = "Discover the best restaurants and food experiences in Melbourne",
} = Astro.props;

const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <nav class="nav">
      <div class="container nav__container">
        <div class="nav__brand-container">
          <a href="/" class="nav__brand">
            <h1>TWO HUNGRY HIPPOS</h1>
          </a>
        </div>

        <!-- <div class="nav__search">
          <form action="/search" method="GET" class="flex flex--gap-2">
            <input
              type="search"
              name="q"
              placeholder="Search restaurants..."
              class="form-input"
              aria-label="Search restaurants"
            />
            <button type="submit" class="btn btn--primary btn--sm"
              >Search</button
            >
          </form>
        </div> -->

        <ul class="nav__links grid-border-top-left">
          <li><a href="/" class="nav__link">Home</a></li>
          <li><a href="/reviews" class="nav__link">Reviews</a></li>
          <li><a href="/category" class="nav__link">Categories</a></li>
          <li><a href="/search" class="nav__link">Search</a></li>
        </ul>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer
      style="background-color: var(--color-gray-100); padding: var(--spacing-8) 0;"
    >
      <div class="container text-center">
        <p class="text-gray-600">
          &copy; {year}
          We acknowledge the Traditional Owners of the land we work across, the Wurundjeri
          Woi-wurrung and Bunurong / Boon Wurrung peoples of the Kulin and pay respect
          to their Elders past and present.
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/main.scss";
</style>
